<main class="whole-preview">
  <section class="cart">
    <h2>Cart</h2>
    <div class="order-summary">
      <ul class="order-summary__list">
        <li class="order-summary__list__list-item">
          <img src="/images/sunglasses.png" class="order-summary__list__list-item__image" alt="">
          <p class="order-summary__list__list-item__title">Sunglasses</p>
          <p class="order-summary__list__list-item__price">5.00</p>
        </li>
        <li class="order-summary__list__list-item">
          <img src="/images/headphones.png" class="order-summary__list__list-item__image" alt="">
          <p class="order-summary__list__list-item__title">Headphones</p>
          <p class="order-summary__list__list-item__price">5.00</p>
        </li>
      </ul>
    </div>
    <div class="cart__footer"><span class="cart__footer__label">Total:</span><span
        class="cart__footer__amount">10.00</span>
      <a href="/checkout/{{type}}">
        <p class="button">Continue to checkout</p>
      </a>
    </div>
  </section>
</main>